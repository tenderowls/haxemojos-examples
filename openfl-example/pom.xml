<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.example</groupId>
    <artifactId>haxemojos-openfl-sample</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>har</packaging>

	<profiles>
		<profile>
			<id>flash</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<compile.target>flash</compile.target>
			</properties>
		</profile>
		<profile>
			<id>html5</id>
			<activation>
				<property>
					<name>html5</name>
				</property>
			</activation>
			<properties>
				<compile.target>html5</compile.target>
			</properties>
		</profile>
	</profiles>
	
    <build>
        <sourceDirectory>Source</sourceDirectory>
        <plugins>
            <plugin>
                <groupId>com.tenderowls.opensource</groupId>
                <artifactId>haxemojos-maven-plugin</artifactId>
                <version>1.0.1-SNAPSHOT</version>
                <extensions>true</extensions>
                <configuration>
                    <main>piratepig.PiratePig</main>
					<targets></targets>
				</configuration>
				
				<executions>
					<execution>
                        <id>openfl-prepare</id>
						<phase>validate</phase>
						<configuration>
							<haxelib>openfl</haxelib>
							<arguments>
								<argument>setup</argument>
							</arguments>
						</configuration>
						<goals>
							<goal>haxelibRun</goal>
						</goals>
					</execution>
					<execution>
                        <id>openfl-setup-target</id>
                        <phase>validate</phase>
						<configuration>
							<haxelib>openfl</haxelib>
							<arguments>
								<argument>setup</argument>
								<argument>${compile.target}</argument>
							</arguments>
						</configuration>
						<goals>
							<goal>haxelibRun</goal>
						</goals>
					</execution>
					<execution>
						<id>openfl-compile</id>
						<phase>compile</phase>
						<configuration>
							<haxelib>openfl</haxelib>
							<arguments>
								<argument>build</argument>
								<argument>${basedir}/project.xml</argument>
								<argument>${compile.target}</argument>
							</arguments>
						</configuration>
						<goals>
							<goal>haxelibRun</goal>
						</goals>
					</execution>
				</executions>
				
                <dependencies>
                    <dependency>
                        <groupId>org.haxe.compiler</groupId>
                        <artifactId>haxe-compiler</artifactId>
                        <version>3.0.0</version>
                        <type>pom</type>
                    </dependency>
                    <dependency>
                        <groupId>org.nekovm</groupId>
                        <artifactId>nekovm</artifactId>
                        <version>2.0.0</version>
                        <type>pom</type>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>lib.haxe.org</groupId>
            <artifactId>openfl</artifactId>
            <version>1.0.5</version>
            <type>haxelib</type>
        </dependency>
		<dependency>
            <groupId>lib.haxe.org</groupId>
            <artifactId>actuate</artifactId>
            <version>1.6.3</version>
            <type>haxelib</type>
        </dependency>
    </dependencies>

    <repositories>
        <repository>
            <id>haxemojos-public-repository</id>
            <url>http://repo.haxemojos.org/content/groups/public</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>oss</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
        </pluginRepository>
        <pluginRepository>
            <id>haxemojos-public-repository</id>
            <url>http://repo.haxemojos.org/content/groups/public</url>
        </pluginRepository>
    </pluginRepositories>

</project>
